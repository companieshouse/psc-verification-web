{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}


{% block main_content %}
      {{ govukPanel({
        titleText: i18n.psc_verified_main_title,
        html: i18n.psc_verified_reference_number_statement + "<br><strong>[reference number]</strong>"
      }) }}

      {{ govukSummaryList({
  rows: [
    {
      key: {
        id: "psc-verified-company-number",
        text: i18n.psc_verified_company_number
      },
      value: {
        text: "[company number]"
      }
    },
    {
      key: {
        id: "psc-verified-company-name",
        text: i18n.psc_verified_company_name
      },
      value: {
        text: "[company name]"
      }
    },
    {
      key: {
        id: "psc-verified-psc-name",
        text: i18n.psc_verified_psc_name
      },
      value: {
        text: "[name]"
      }
    }
  ]
}) }}
