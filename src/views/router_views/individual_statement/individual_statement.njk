{% extends "layouts/default.njk" %}

{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% set title = i18n.individual_statement_title %}

{% set nameAndDateBirthText = [
    PscName,
    " ",
    "(",
    i18n.individual_statement_born,
    DateOfBirth,
    ")"
] | join %}

{% set statementText %}
<label>{{ i18n.individual_statement_part1 }}
    <strong>{{ PscName }}</strong>
    {{ i18n.individual_statement_part2 }}</label>
{% endset %}

{% block main_content %}
    <form action="" method="post">
        <span class="govuk-caption-xl">
            <div class="govuk-!-padding-bottom-1">{{ nameAndDateBirthText }}</div>
        </span>

        {{ govukCheckboxes({
            name: "psc_individual_statement",
            fieldset: {
                legend: {
                text: title,
                isPageHeading: true,
                classes: "govuk-fieldset__legend--l"
                }
        },
        items: [
            {
                value: "individualStatement",
                html: statementText
            }
        ]
        })
        }}

        {{ govukButton({
            attributes: {
                id: "submit", "data-event-id": "confirm-and-continue-button"
            },
            text: i18n.global_continue_button
            })
        }}
    </form>

{% endblock %}