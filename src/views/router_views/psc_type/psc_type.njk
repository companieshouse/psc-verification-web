{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set title = i18n.psc_type_title %}

{% block main_content %}

    <form action="" method="post">
        {% include "includes/csrf_token.njk" %}
        <div class="govuk-form-group{{ ' govuk-form-group--error' if errors.pscType is not undefined }}">
            {{ govukRadios({
            idPrefix: "pscType",
            name: "pscType",
            value: pscType,
            fieldset: {
                legend: {
                    text: i18n.psc_type_title,
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--l"
                }
            },
            errorMessage: errors.pscType.inline if errors.pscType,
            items: [
                {
                    value: "individual",
                    text: i18n.psc_type_individual,
                    attributes:{
                        "data-event-id": "psc-type-radio-option"
                    }

                },
                {
                    value: "rle",
                    text: i18n.psc_type_rle,
                    hint: {
                        text: i18n.psc_type_hint | safe
                    },
                    attributes:{
                        "data-event-id": "rle-type-radio-option"
                    }
                }
            ]
        })
        }}
        </div>

        {{ govukDetails({
            summaryText: i18n.psc_type_details_title,
            text: i18n.psc_type_details_text,
            attributes:{
                "data-event-id": "what-is-the-difference-dropdown"
            }
            })
        }}

        {{ govukButton({
            attributes: {
                id: "submit",
                "data-event-id": "psc-type-continue-button"
            },
            text: i18n.global_continue_button
            })
        }}
    </form>

{% endblock %}