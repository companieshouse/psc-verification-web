{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set title = i18n.individual_psc_list_main_title %}

{% set hintText %}
    {{ i18n.individual_psc_list_hint_1 }}
    {{companyName}}
    {{ i18n.individual_psc_list_hint_2 }}
{% endset %}

{% set pscName %}
    {{pscIndividuals.key}}
{% endset %}

{% set pscIndividuals = {"Paul Smith": "2019"} %}

{% for key, value in pscIndividuals %}
    {% set itemsText %}
        {{ key }}
    {% endset %}
    
    {% set itemsHintText %}
        {{ value }}
    {% endset %}
{% endfor %}

{# {% set itemsText %}
    {{pscIndividuals.key}}
{% endset %}

{% set itemsHintText %}
    {{ i18n.individual_psc_list_born_in }} {{pscIndividuals.value}}
{% endset %} #}

{% block main_content %}
    <form action="" method="post">

        {% for key, value in pscIndividuals %}
        {{ govukRadios({
            name: "pscIndividualListRadioButtons",
            fieldset: {
                legend: {
                    text: i18n.individual_psc_list_main_title,
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--l"
                }
            },
            hint: {
                html: hintText
            },
            items: [
                {
                    value: pscName,
                    text: key,
                    hint: {
                        text: value
                    }
                }
            ]
            })
        }}
        {% endfor %}

        {{ govukButton({
            attributes: {
                id: "submit", "data-event-id": "confirm-and-continue-button"
            },
            text: i18n.global_continue_button
            })
        }}
    </form>

{% endblock %}