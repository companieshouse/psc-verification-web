{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% set title = i18n.rle_verified_title %}

{% block main_content %}
      {{ govukPanel({
        titleText: i18n.rle_verified_main_title,
        html: i18n.rle_verified_reference_number_statement + "<br><strong>[reference number]</strong>"
      }) }}

      {{ govukSummaryList({
  rows: [
    {
      key: {
        id: "rle-verified-company-number",
        text: i18n.rle_verified_company_number
      },
      value: {
        text: "[company number]"
      }
    },
    {
      key: {
        id: "rle-verified-company-name",
        text: i18n.rle_verified_company_name
      },
      value: {
        text: "[company name]"
      }
    },
    {
      key: {
        id: "rle-verified-rle-name",
        text: i18n.rle_verified_rle_name
      },
