{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% block main_content %}
    <div class="govuk-grid-row">

            <h1 class="govuk-heading-l">{{ i18n.start_main_title }}</h1>
            <p class="govuk-body">{{ i18n.start_service_description }}</p>
            
            <h2 class="govuk-heading-m">{{ i18n.start_service_user }}</h2>
            <p class="govuk-body">{{ i18n.start_service_user_description }}</p>
            
            <ul class="govuk-list govuk-list--bullet">
                <li>{{ i18n.start_service_user_item1 }}</li>
                <li>{{ i18n.start_service_user_item2 }}</li>
                <li>{{ i18n.start_service_user_item3 }}</li>
                <li>{{ i18n.start_service_user_item4 }}</li>
                <li>{{ i18n.start_service_user_item5 }}</li>
            </ul>

            {{ govukDetails({
                summaryText: "What is PSC verification?",
                text:"This is example text."
            }) }}

            {{ govukButton({
                text: "Skeleton One",
                href: Urls.CONFIRM_COMPANY,
                classes: "govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8",
                isStartButton: true
            }) }}

    </div>

{% endblock %}
