{
    "ignorePatterns": ["views/", "node_modules/"],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "extends": ["standard"],
    "parser": "@typescript-eslint/parser",
    "overrides": [
         {
            "files": ["*.test.ts"],
            "rules": {
                "no-unused-expressions": "off"
            }
        }
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double", { "allowTemplateLiterals": true }],
        "semi": [2, "always"],
        "no-unused-vars": "off",
        "padded-blocks": "off",
        "check-file/filename-naming-convention": [
            "error",
            {
              "src/**/*.*": "CAMEL_CASE",
              "test/**/*.*": "CAMEL_CASE"
            },
            {
                "ignoreMiddleExtensions": true
            }],
          "check-file/folder-naming-convention": [
            "error",
            {
              "src/**/": "KEBAB_CASE",
              "test/**/": "KEBAB_CASE"
            }
          ],
          "sort-imports": ["error", {
            "ignoreDeclarationSort": true
          }],
          "unused-imports/no-unused-imports": "error"
    },
    "plugins": [
        "@typescript-eslint",
        "check-file",
        "unused-imports"
    ],
    "env": {
        "node": true,
        "commonjs": true,
        "jest": true,
        "es6": true
    }
}
